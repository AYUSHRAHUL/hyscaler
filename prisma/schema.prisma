// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  email             String   @unique
  password          String
  name              String
  cookingSkillLevel String   // beginner, intermediate, advanced
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  profile           UserProfile?
  ratings           Rating[]
  reviews           Review[]
}

model UserProfile {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  userId            String   @unique @db.ObjectId
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  dietaryPreferences String[] // vegetarian, vegan, gluten-free, etc.
  allergies         String[] // peanuts, dairy, etc.
  preferredIngredients String[] // favorite ingredients
  avoidedIngredients String[] // ingredients to avoid
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Rating {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipeId  Int      // Spoonacular recipe ID
  rating    Int      // 1-5
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, recipeId])
  @@index([recipeId])
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipeId  Int      // Spoonacular recipe ID
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([recipeId])
}

